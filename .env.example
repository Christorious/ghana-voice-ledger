# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Build Configuration
BUILD_TYPE=debug
GRADLE_OPTS=-Dorg.gradle.daemon=false -Xmx4g

# Signing Configuration (for release builds)
KEYSTORE_PASSWORD=your_keystore_password
KEY_ALIAS=your_key_alias
KEY_PASSWORD=your_key_password
KEYSTORE_PATH=keystore/ghana-voice-ledger.jks

# API Configuration
API_BASE_URL_DEV=https://api-dev.voiceledger.com
API_BASE_URL_STAGING=https://api-staging.voiceledger.com
API_BASE_URL_PROD=https://api.voiceledger.com

# Firebase Configuration
FIREBASE_PROJECT_ID_DEV=ghana-voice-ledger-dev
FIREBASE_PROJECT_ID_STAGING=ghana-voice-ledger-staging
FIREBASE_PROJECT_ID_PROD=ghana-voice-ledger-prod

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=ghana-voice-ledger
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_SPEECH_API_KEY=your_speech_api_key

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voiceledger_dev
DB_USER=voiceledger
DB_PASSWORD=dev_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Analytics Configuration
ENABLE_ANALYTICS=false
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=false

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key
BIOMETRIC_ENCRYPTION_KEY=your_biometric_key

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_SPEAKER_IDENTIFICATION=true
ENABLE_VOICE_COMMANDS=true
ENABLE_DAILY_SUMMARIES=true

# Development Configuration
DEBUG_MODE=true
LOG_LEVEL=DEBUG
ENABLE_MOCK_DATA=true
ENABLE_PERFORMANCE_LOGGING=true

# CI/CD Configuration
GITHUB_TOKEN=your_github_token
SLACK_WEBHOOK_URL=your_slack_webhook_url
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON=your_service_account_json

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000

# Localization Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,tw,pcm
CURRENCY_CODE=GHS
COUNTRY_CODE=GH

# Performance Configuration
MAX_AUDIO_DURATION_SECONDS=300
MAX_CONCURRENT_RECOGNITIONS=3
CACHE_SIZE_MB=50
DATABASE_CACHE_SIZE_MB=20

# Network Configuration
CONNECTION_TIMEOUT_SECONDS=30
READ_TIMEOUT_SECONDS=60
RETRY_ATTEMPTS=3
OFFLINE_SYNC_INTERVAL_MINUTES=15

# Audio Configuration
SAMPLE_RATE=16000
AUDIO_FORMAT=PCM_16BIT
BUFFER_SIZE_BYTES=4096
VAD_SENSITIVITY=0.5

# ML Model Configuration
SPEAKER_MODEL_PATH=models/speaker_identification.tflite
SPEECH_MODEL_PATH=models/speech_recognition.tflite
ENTITY_MODEL_PATH=models/entity_extraction.tflite
MODEL_UPDATE_INTERVAL_HOURS=24

# Backup Configuration
BACKUP_INTERVAL_HOURS=6
MAX_BACKUP_FILES=10
BACKUP_ENCRYPTION_ENABLED=true

# Testing Configuration
TEST_DATABASE_NAME=voiceledger_test
MOCK_API_RESPONSES=true
ENABLE_UI_TESTING=false
TEST_TIMEOUT_SECONDS=30